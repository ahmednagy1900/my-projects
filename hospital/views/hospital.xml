<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">patient.view.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="gender"/>
                        <field name="status"/>
                        <field name="doctor_id"/>


                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="HospitalPatient_tree_view">
        <field name="name">HospitalPatient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="HospitalPatient tree">
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="status"/>
                <field name="doctor_id"/>
            </tree>
        </field>
    </record>
    <record id="hospital_patient_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first patient
            </p>
        </field>
    </record>
    <menuitem id="hospital_root_menu"
              name="Hospital"
              sequence="0"/>
    <menuitem id="patient_root_master"
              name="Patient Details "
              parent="hospital_root_menu"
              sequence="0"/>
    <menuitem id="patient_menu"
              name="Patient"
              action="hospital_patient_action"
              parent="patient_root_master"
              sequence="0"/>


    <record id="view_doctor_form" model="ir.ui.view">
        <field name="name">doctor.view.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="specialist"/>
                        </group>
                        <group>
                            <field name="doctor_times"/>
                            <field name="doctor_department"/>
                            <field name="patient_ids"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="HospitalDoctor_tree_view">
        <field name="name">HospitalDoctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree string="HospitalDoctor tree">
                <field name="name"/>
                <field name="specialist"/>
                <field name="doctor_times"/>
                <field name="doctor_department"/>
                <field name="patient_ids"/>


            </tree>
        </field>
    </record>
    <record id="hospital_doctor_action" model="ir.actions.act_window">
        <field name="name">doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first doctor
            </p>
        </field>
    </record>
    <menuitem id="doctor_menu"
              name="doctors"
              action="hospital_doctor_action"
              parent="patient_root_master"
              sequence="0"/>

</odoo>
