<?xml version="1.0" encoding="UTF-8" ?>


<odoo>

    <record id="view_customers_form" model="ir.ui.view">
        <field name="name">customers.view.form</field>
        <field name="model">customers</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <!--                        <button name="compute_age" type="object" string="PrintRec"/>-->
                        <!--                        <button name="create_record" type="object" string="Create Rec"/>-->
                        <field name="name"/>
                        <field name="age"/>
                        <!--                        <field name="lawyer_model_id"/>-->
                        <!--                        <field name="another_boolean"/>-->
                        <!--                        <field name="create_uid"/>-->
                        <!--                        <field name="create_date"/>-->
                        <!--                        <field name="active"/>-->
                        <!--                        <field name="another_boolean"/>-->
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <record id="view_customers_tree" model="ir.ui.view">
        <field name="name">custmers.view.tree</field>
        <field name="model">customers</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <!--                <field name="create_uid"/>-->
                <!--                <field name="create_date"/>-->
            </tree>
        </field>
    </record>

    <record id="action_customers_view" model="ir.actions.act_window">
        <field name="name">customers management</field>
        <field name="res_model">customers</field>
        <field name="view_mode">tree,form</field>

    </record>
    <menuitem id="customers_main_menu"
              name="customers"
              sequence="2"
              parent="law_root_menu"/>
    <menuitem id="all_customers_menu"
              name="all_customers"
              sequence="2"
              parent="customers_main_menu"
              action="action_customers_view"/>

</odoo>